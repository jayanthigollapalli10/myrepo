import 'package:flutter/material.dart'; 

void main() { 
  runApp(Abc());   // Entry point of the Flutter app
} 

class Abc extends StatelessWidget { 
  @override 
  Widget build(BuildContext context) { 
    return MaterialApp( 
      home: Def(),  // Sets Def() widget as the home screen
    ); 
  } 
} 

class Def extends StatelessWidget { 
  const Def({super.key}); 

  @override 
  Widget build(BuildContext context) { 
    return Scaffold( 
      appBar: AppBar( 
        title: Text("Welcome"),          // Title displayed in AppBar
        backgroundColor: Colors.purple,  // AppBar color
      ), 
      body: Column( 
        children: [ 
          // Widgets like Text, Buttons, Images can be added here
          Text(
            'Hello Flutter!',
            style: TextStyle(fontSize: 24, color: Colors.deepPurple),
          ),
          SizedBox(height: 20),
          ElevatedButton(
            onPressed: () {
              print("Button Clicked!");
            },
            child: Text("Click Me"),
          ),
        ], 
      ), 
    ); 
  } 
}
